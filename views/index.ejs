<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.css' />
    <style>
      input:checked+.content{
        color: gray;
      }
    </style>
  </head>
  <body>
    <h1>交通費メモ閲覧</h1>
    <h2><%- lmonth %> 月21日～<%- tmonth %> 月20日データ</h2>
    <!-- 前月データへ移動 -->
    <p><a href="#">前月データへ</a></p>
    <div class="container">
      <h2>交通費メモ</h2>
      <button class="btn btn-primary" id="detail">移動レコードを追加</button>
      <h5><br>よく使う経路</h5>
      <table class="table table-primary">
        <tr>
          <th>申請</th>
          <th>日付</th>
          <th>経路</th>
          <th>手段</th>
          <th>費用</th>
          <th>回数</th>
          <th>ジョブ情報</th>
          <th>メモ</th>
          <th>詳細</th>
          <th>回数＋１</th>
        </tr>
        <% for(let i in shuppatsu){ %> 
        <tr>
          <form method="POST" action="/">
            <div class="form-group">
              <td id="checkbox0"><input type="checkbox" name="申請" id="sinsei"></td>
              <td id="date"><%- date[i] %> </td>
              <td id="keiro"><%- shuppatsu[i] %> ～<%- totyaku2[i] %> </td>
              <td id="shudan"><%- shudan[i] %> </td>
              <td id="money"><%- money[i] %> </td>
              <td id="times"><%- times[i] %> </td>
              <td id="job"><%- job[i] %> </td>
              <td id="memo"><%- memo[i] %> </td>
              <input type="hidden" name="id" value="<%- id[i] %> ">
              <input type="hidden" name="shuppatsu" value="<%- shuppatsu[i] %> ">
              <input type="hidden" name="totyaku" value="<%- totyaku[i] %> ">
              <input type="hidden" name="shudan" value="<%- shudan[i] %> ">
              <input type="hidden" name="money" value="<%- money[i] %> ">
              <input type="hidden" name="times" value="<%- times[i] %> ">
              <input type="hidden" name="job" value="<%- job[i] %> ">
              <input type="hidden" name="memo" value="<%- memo[i] %> ">
              <td><a class="btn btn-secondary" name="detail" href="javascript:detail(<%= id[i],shuppatsu[i].id,totyaku[i],shudan[i],money[i],times[i],job[i],memo[i] %> );">詳細</a></td>
              <td><button class="btn btn-secondary" name="oneway">＋１</button></td>
            </div>
          </form>
        </tr>
        <% } %> 
      </table>
    </div>
    <div class="container">
      <table class="table">
        <tr>
          <th>申請</th>
          <th>日付</th>
          <th>経路</th>
          <th>手段</th>
          <th>費用</th>
          <th>回数</th>
          <th>ジョブ情報</th>
          <th>メモ</th>
          <th>詳細</th>
          <th>回数＋１</th>
        </tr>
        <% for(let i in shuppatsu2){ %> 
        <tr>
          <td id="checkbox1"><input type="checkbox" name="申請" id="sinsei"></td>
          <div class="content">
            <td id="date"><%- date2[i] %> </td>
            <td id="keiro"><%- shuppatsu2[i] %> ～<%- totyaku2[i] %></td>
            <td id="shudan"><%- shudan2[i] %></td>
            <td id="money"><%- money2[i] %></td>
            <td id="times"><%- times2[i] %></td>
            <td id="job"><%- job2[i] %></td>
            <td id="memo"><%- memo2[i] %></td>  
          </div>  
          <form method="POST" action="/detail">
            <input type="hidden" name="id" value="<%- id2[i] %> ">
            <input type="hidden" name="shuppatsu" value="<%- shuppatsu2[i] %> ">
            <input type="hidden" name="totyaku" value="<%- totyaku2[i] %> ">
            <input type="hidden" name="shudan" value="<%- shudan2[i] %> ">
            <input type="hidden" name="money" value="<%- money2[i] %> ">
            <input type="hidden" name="times" value="<%- times2[i] %> ">
            <input type="hidden" name="job" value="<%- job2[i] %> ">
            <input type="hidden" name="memo" value="<%- memo2[i] %> ">
            <td><input type="submit" class="btn btn-secondary" value="詳細"></td>
          </form>
          <form action="/" method="post">
            <input type="hidden" name="id" value="<%- id2[i] %> ">
            <input type="hidden" name="shuppatsu" value="<%- shuppatsu2[i] %> ">
            <input type="hidden" name="totyaku" value="<%- totyaku2[i] %> ">
            <input type="hidden" name="shudan" value="<%- shudan2[i] %> ">
            <input type="hidden" name="money" value="<%- money2[i] %> ">
            <input type="hidden" name="times" value="<%- times2[i] %> ">
            <input type="hidden" name="job" value="<%- job2[i] %> ">
            <input type="hidden" name="memo" value="<%- memo2[i] %> ">
            <td><input type="submit" class="btn btn-secondary" value="+1"></td>  
          </form>
        </tr>
        <% } %> 
      </table>
    </div>
  </body>
  <script>
    'use strict';
    document.getElementById("detail").onclick=function(){
      document.location="/detail";//詳細設定ページへ
    }
    function copy(id,shuppatsu,totyaku,shudan,money,times,job,memo){
      let result= window.confirm("以下のメモをコピーしますか？\n"+"経路："+shuppatsu+"~"+totyaku+"\n手段："+shudan+"\n費用："+money+"\n回数："+times+"\nジョブ情報："+job+"\nメモ："+memo);
    }
  </script>
</html>
